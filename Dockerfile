FROM python:2.7-slim

# ===============================================================================================
# User
# ===============================================================================================
USER root

# ===============================================================================================
# Set working directory
# ===============================================================================================
WORKDIR /home/app

# ===============================================================================================
# Copy files
# ===============================================================================================
ADD . /home/app

# ===============================================================================================
# Install Dependencies
# ===============================================================================================
RUN pip install --trusted-host pypi.python.org -r requirements.txt

# ===============================================================================================
# Set ENV
# ===============================================================================================
ENV SERVER_TIER DEV

# ===============================================================================================
# Port Expose
# ===============================================================================================
EXPOSE 5000

# ===============================================================================================
# Entrypoint
# ===============================================================================================
ENTRYPOINT [ "python", "app.py" ] 